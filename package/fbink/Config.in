config BR2_PACKAGE_FBINK
	bool "fbink"
	help
	  FrameBuffer eInker library and CLI for e-ink devices.

	  https://github.com/NiLuJe/FBInk

if BR2_PACKAGE_FBINK

choice
	prompt "FBInk platform"
	default BR2_PACKAGE_FBINK_PLATFORM_LINUX
	help
	  Select the device family FBInk should target.

config BR2_PACKAGE_FBINK_PLATFORM_KINDLE
	bool "Kindle"
	help
	  Amazon Kindle e-ink devices.

config BR2_PACKAGE_FBINK_PLATFORM_KOBO
	bool "Kobo"
	help
	  Rakuten Kobo e-ink devices.

config BR2_PACKAGE_FBINK_PLATFORM_CERVANTES
	bool "Cervantes"
	help
	  BQ Cervantes e-ink devices.

config BR2_PACKAGE_FBINK_PLATFORM_REMARKABLE
	bool "reMarkable"
	help
	  reMarkable e-ink tablets.

config BR2_PACKAGE_FBINK_PLATFORM_POCKETBOOK
	bool "PocketBook"
	help
	  PocketBook e-ink devices.

config BR2_PACKAGE_FBINK_PLATFORM_LINUX
	bool "Linux (generic)"
	help
	  Generic Linux framebuffer devices.

endchoice

config BR2_PACKAGE_FBINK_DRAW
	bool "draw support"
	default n
	help
	  Enable drawing primitives.

config BR2_PACKAGE_FBINK_FONTS
	bool "extra bitmap fonts"
	default n
	select BR2_PACKAGE_FBINK_DRAW
	help
	  Bundle the extra fixed-cell bitmap fonts.

config BR2_PACKAGE_FBINK_IMAGE
	bool "image support"
	default n
	select BR2_PACKAGE_STB
	select BR2_PACKAGE_FBINK_DRAW
	help
	  Enable image rendering support.
	  Requires stb.

config BR2_PACKAGE_FBINK_OPENTYPE
	bool "OpenType/TrueType support"
	default n
	select BR2_PACKAGE_STB
	select BR2_PACKAGE_LIBUNIBREAK
	select BR2_PACKAGE_FBINK_DRAW
	help
	  Enable OpenType/TrueType font rendering.
	  Requires stb and libunibreak.

config BR2_PACKAGE_FBINK_INPUT
	bool "input support"
	default n
	help
	  Enable input utilities and input scan support.

endif
